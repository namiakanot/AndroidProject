<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/divider_horizontal_textfield"
    android:backgroundTint="@color/cardview_shadow_start_color"
    tools:context=".AchievementActivity">

    <ImageView
        android:id="@+id/achievement_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/result_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/result_background" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="284dp"
        android:layout_height="85dp"
        android:src="@drawable/achievement"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="363dp"
        android:layout_height="119dp"
        android:scaleX="2"
        android:src="@drawable/pop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/achievement_bg"
        app:layout_constraintVertical_bias="0.199"
        app:srcCompat="@drawable/pop" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="195dp"
        android:layout_height="45dp"
        android:fontFamily="@font/gkktt851"
        android:rotationX="0"
        android:text="プレイ時間"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#070707"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.189" />

    <Button
        android:id="@+id/attack_bt"
        android:layout_width="106dp"
        android:layout_height="76dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/font"
        android:text="←戻る"
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@+id/achievement_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/achievement_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/gold1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@android:drawable/list_selector_background"
                    android:scaleType="fitCenter"
                    android:src="@drawable/trophy_gold_illust_425_768x820"
                    app:srcCompat="@drawable/trophy_gold_illust_425_768x820" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/gold1bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="287dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/goldenbanner"
                        android:max="100"
                        android:progress="86" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/gkktt851"
                        android:text="スマせん者"
                        android:textSize="34sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/silver1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@android:drawable/list_selector_background"
                    android:scaleType="fitCenter"
                    android:src="@drawable/silver"
                    app:srcCompat="@drawable/silver" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/silver1bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="285dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/silverbanner"
                        android:max="100"
                        android:progress="50" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/gkktt851"
                        android:text="戦いは数"
                        android:textSize="34sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/silver2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@android:drawable/list_selector_background"
                    android:scaleType="fitCenter"
                    android:src="@drawable/silver"
                    app:srcCompat="@drawable/silver" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/silver2bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="285dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/silverbanner" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/gkktt851"
                        android:text="禁忌のドンメル"
                        android:textSize="34sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/bronze1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@android:drawable/list_selector_background"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bronze"
                    app:srcCompat="@drawable/bronze" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/bronze1bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="285dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bronzebanner" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/gkktt851"
                        android:text="明け方の猛者達"
                        android:textSize="34sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/bronze2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@android:drawable/list_selector_background"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bronze"
                    app:srcCompat="@drawable/bronze" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/bronze2bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="285dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bronzebanner"
                        android:max="100" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/gkktt851"
                        android:text="精鋭"
                        android:textSize="34sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/bronze3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@android:drawable/list_selector_background"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bronze"
                    app:srcCompat="@drawable/bronze" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/bronze3bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="285dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bronzebanner"
                        android:max="100" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gkktt851"
                        android:text="鬼教官"
                        android:textAlignment="viewStart"
                        android:textSize="34sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>